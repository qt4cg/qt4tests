   <test-case name="string-template-020">
      <description>Escaping</description>
      <created by="Michael Kay" on="2023-01-29"/>
      <test><![CDATA[
        let $n := 10 return
        `There were {"{"}{$n}{"}"} green bottles{"`"}`
      ]]></test>
      <result>
