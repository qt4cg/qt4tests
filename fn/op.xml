   <test-case name="fn-op-node-003" covers-40="PR2130">
      <description>Node comparisons</description>
      <created by="Michael Kay" on="2025-07-29"/>
      <modified by="Michael Kay" on="2025-10-10" change="add more operators"/>
      <modified by="Michael Kay" on="2025-10-28" change="correct expected result"/>
      <dependency type="spec" value="XP40+ XQ40+"/>
      <test><![CDATA[
         let $in := parse-xml('<doc><a/><b/><c/></doc>') return
         for $s in ("is-not", "follows", "precedes", "follows-or-is", "precedes-or-is")
         return array{for-each-pair($in//doc/*, replicate($in//doc/b, 3), op($s))}
         ]]>
      </test>
      <result>
         <assert-deep-eq>
            [true(), false(), true()],
            [false(), false(), true()],
            [true(), false(), false()],
            [false(), true(), true()],
            [true(), true(), false()]
         </assert-deep-eq>       
      </result>
   </test-case>
   
   <test-case name="fn-op-venn-001">
      <description>Union, intersect, except comparisons</description>
      <created by="Michael Kay" on="2022-09-30"/>
      <dependency type="spec" value="XP40+ XQ40+"/>
      <test><![CDATA[
         let $in := parse-xml('<doc><a/><b/><c/></doc>') return
         for $s in ("union", "|", "intersect", "except")
         return array{op($s)($in//doc/(a,b), $in//doc/(b,c)) ! name()}
         ]]>
      </test>
      <result>
         <assert-deep-eq>
            ['a', 'b', 'c'],
            ['a', 'b', 'c'],
            ['b'],
            ['a']
         </assert-deep-eq>       
      </result>
   </test-case>
   
