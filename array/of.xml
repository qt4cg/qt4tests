<?xml version="1.0" encoding="us-ascii"?>
<test-set xmlns="http://www.w3.org/2010/09/qt-fots-catalog" name="array-of">
   <description>Tests for the proposed XPath 4.0 array:of() function</description>
   <link type="spec" document="http://www.w3.org/TR/xpath-functions-30/"
         idref="array-of"/>
   
   <dependency type="spec" value="XP40+ XQ40+"/>

   <test-case name="array-of-001">
      <description> Create an empty array </description>
      <created by="Michael Kay" on="2021-06-28"/>
      <test>array:of(())</test>
      <result>
         <assert-deep-eq>[]</assert-deep-eq>
      </result>
   </test-case>
   
   <test-case name="array-of-002">
      <description> Create a singleton array </description>
      <created by="Michael Kay" on="2021-06-28"/>
      <modified by="Michael Kay" on="2023-03-22" change="revised spec using value records"/>
      <test>array:of(map{'value':1})</test>
      <result>
         <assert-deep-eq>[1]</assert-deep-eq>
      </result>
   </test-case>
   
   <test-case name="array-of-003">
      <description> Create a singleton array whose member is a sequence</description>
      <created by="Michael Kay" on="2021-06-28"/>
      <modified by="Michael Kay" on="2023-03-22" change="revised spec using value records"/>
      <test>array:of(map{'value':(1 to 5)})</test>
      <result>
         <assert-deep-eq>[(1 to 5)]</assert-deep-eq>
      </result>
   </test-case>
   
   <test-case name="array-of-004">
      <description> Create a more complex array</description>
      <created by="Michael Kay" on="2021-06-28"/>
      <modified by="Michael Kay" on="2023-03-22" change="revised spec using value records"/>
      <test>array:of(map:entry('value', 1 to 3), map:entry('value', 11 to 13))</test>
      <result>
         <assert-deep-eq>[(1, 2, 3), (11, 12, 13)]</assert-deep-eq>
      </result>
   </test-case>
   
   <test-case name="array-of-005">
      <description> Create a more complex array</description>
      <created by="Michael Kay" on="2021-06-28"/>
      <modified by="Michael Kay" on="2023-03-22" change="revised spec using value records"/>
      <test>array:of(("The price of freedom" => tokenize()) ! map:entry('value', characters(.)))</test>
      <result>
         <assert-deep-eq>[("T", "h", "e"), ("p", "r", "i", "c", "e"), ("o", "f"), ("f", "r", "e", "e", "d", "o", "m")]</assert-deep-eq>
      </result>
   </test-case>
   
   <test-case name="array-of-006">
      <description> Reconstruct an array</description>
      <created by="Michael Kay" on="2021-06-28"/>
      <test>array:of(array:members([("T", "h", "e"), ("p", "r", "i", "c", "e"), ("o", "f"), ("f", "r", "e", "e", "d", "o", "m")]))</test>
      <result>
         <assert-deep-eq>[("T", "h", "e"), ("p", "r", "i", "c", "e"), ("o", "f"), ("f", "r", "e", "e", "d", "o", "m")]</assert-deep-eq>
      </result>
   </test-case>
   
 

 
</test-set>
